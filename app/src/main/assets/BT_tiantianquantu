<script type="text/javascript">

    var myChart = echarts.init(document.getElementById('main'), 'myTheme');

    option = {
    title: {
        show:true,
        text: '甜甜圈图',
        textStyle: {
            fontSize: 12,
            fontWeight: 'bolder',
