<!-- 为ECharts准备一个具备大小（宽高）的Dom -->
<div id="main" style="width: 100%;height:100%;"></div>
<!-- ECharts单文件引入 -->

<script src="myTheme.js"></script>
<script type="text/javascript">

    var myChart = echarts.init(document.getElementById('main'), 'myTheme');

    option = {
    title: {
        show:true,
        text: '横向条形图',
        subtext: '世界人口总量图',
        textStyle: {
            fontSize: 12,
            fontWeight: 'bolder',
            color: '#FFFFFF'
        },
        x: '5',
        y: '5'
    },
    grid: {
        x: 40,
        y: 40,
        x2: 20,
        y2: 45,
        borderWidth: 1,
    },
    tooltip: {
        trigger: 'axis',
        axisPointer: {
            type: 'shadow'
        }
    },
    legend: {
        data: ['2011年', '2012年'],
        x: 'center',
        y: 'bottom',
        itemHeight: 8
    },
    xAxis: {
        type: 'value',
        boundaryGap: [0, 0.01]
    },
    yAxis: {
        type: 'category',
        data: ['巴西','印尼','美国','印度','中国','总(万)']
    },
    series: [
        {
            name: '2011年',
            type: 'bar',
            data: [18203, 23489, 29034, 104970, 131744, 630230]
        },
        {
            name: '2012年',
            type: 'bar',
            data: [19325, 23438, 31000, 121594, 134141, 681807]
        }
    ]
    };

    myChart.setOption(option);

</script>
